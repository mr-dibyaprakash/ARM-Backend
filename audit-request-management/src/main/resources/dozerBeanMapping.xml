<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
      http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <!--    ProductionCompanyName-->
    <mapping>
        <class-a>com.armapp.model.Production</class-a>
        <class-b>com.armapp.modelDTOs.ProductionVO</class-b>
        <field>
            <a>contractNumber</a>
            <b>contractNumber</b>
        </field>
        <field>
            <a>productionCompanyName</a>
            <b>productionCompanyName</b>
        </field>
    </mapping>
    <!--    ProductionCompanyName-->

    <!--    Project Name & Contract No-->
    <mapping>
        <class-a>com.armapp.model.Project</class-a>
        <class-b>com.armapp.modelDTOs.ProjectVO</class-b>
        <field>
            <a>projectName</a>
            <b>projectName</b>
        </field>
        <field>
            <a>production.contractNumber</a>
            <b>contractNumber</b>
        </field>
    </mapping>
    <!--    Project Name & Contract No-->

    <!--    Talents     -->
    <mapping>
        <class-a>com.armapp.model.Talent</class-a>
        <class-b>com.armapp.modelDTOs.TalentVO</class-b>
        <field>
            <a>talentName</a>
            <b>talentName</b>
        </field>
    </mapping>
    <!--    Talents    -->
</mappings>